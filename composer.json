{
    "name": "chat-tiempo-real/app",
    "description": "Chat en tiempo real con PHP",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "scripts": {
        "start": "php -S 0.0.0.0:$PORT",
        "heroku-postbuild": "echo 'Build completed'"
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "extra": {
        "heroku": {
            "document-root": ".",
            "index-document": "index.php"
        }
    }
}